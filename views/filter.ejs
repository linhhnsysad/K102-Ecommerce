                    <hr>
                </div>
            </div>
            <div class="col-md-9 navbar-2">
                <div class="container">
                    <div class="row clearfix">
                        <% for(const prove of productList) { %>  
                            <div class="card product_item col-lg-3 col-md-4 col-sm-12">
                                <div class="body">
                                    <div class="cp_img">
                                        <img src="../views/assets/img/products/com-5.jpg" alt="Product" class="img-fluid">
                                        <div class="hover">
                                            <a href="javascript:void(0);" class="btn btn-primary btn-sm waves-effect"><i class="zmdi zmdi-plus"></i></a>
                                            <a href="javascript:void(0);" class="btn btn-primary btn-sm waves-effect"><i class="zmdi zmdi-shopping-cart"></i></a>
                                        </div>
                                    </div>
                                    <div class="product_details">
                                        <h5 class="product-name"><%=prove.productName %></h5>
                                        <h5 class="product-quality">Chat luong: <%=prove.quality %></h5>
                                        <h5 class="product-price">Gia ca: <%=prove.price %></h5>
                                        <a class="details" href="#" value="<%=prove.productCode%>">details</a>
                                    </div>
                                </div>
                            </div>
